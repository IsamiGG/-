        <TextBlock HorizontalAlignment="Left" Margin="57,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="490" Height="20" Grid.Column="1"><Run Text="Пожалуйста"/><Run Text=" заполните всю информацию, чтобы зарегистрироваться в качестве бегуна"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="77,166,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
