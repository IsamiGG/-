            <TextBlock>Мужской</TextBlock>
            <TextBlock>Женский</TextBlock>
        </ComboBox>
        <DatePicker HorizontalAlignment="Left" Margin="576,174,0,0" VerticalAlignment="Top" Width="115" Height="23" RenderTransformOrigin="0.478,0.217" Grid.RowSpan="2" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="21" Margin="575,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" TextChanged="TextBox_TextChanged" Grid.Row="1" Grid.Column="1"/>
        <Button Content="Регистрация" Margin="205,132,406,39" BorderThickness="2" Click="Button_Click_1" Grid.Row="1" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Отмена" Margin="324,131,314,40" BorderThickness="2" Click="Button_Click_1" Grid.Row="1" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
