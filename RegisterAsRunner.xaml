        <TextBlock HorizontalAlignment="Left" Margin="538,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"><Run Text="Пол"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="65,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.RowSpan="2" Grid.ColumnSpan="2"><Run Text="Пароль"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="5,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Повторите пароль:" Grid.Row="1" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="1,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"><Run Text="Имя"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="59,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="2"><Run Text="Фамилия"/><Run Text=":"/></TextBlock>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="35,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132" TextChanged="TextBox_TextChanged" Text="Email" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="35,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" TextChanged="TextBox_TextChanged" Text="Пароль" Grid.RowSpan="2" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="21" Margin="35,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" TextChanged="TextBox_TextChanged" Text="Повторите пароль" Grid.Row="1" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="21" Margin="35,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" TextChanged="TextBox_TextChanged" Text="Имя" Grid.Row="1" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="21" Margin="36,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" TextChanged="TextBox_TextChanged" Text="Фамилия" Grid.Row="1" Grid.Column="1"/>
